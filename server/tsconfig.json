{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "commonjs",                       
    "rootDir": "./src",                         
    "outDir": "./dist",                         
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,                       
    "noImplicitAny": false,                     
    "resolveJsonModule": true,                  
    "moduleResolution": "node",                 
    "types": ["node", "express"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}