{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",                       // look for all .ts under src/
    "outDir": "./dist",                       // emit JS into dist/
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*"                                // grab every TS file in src/
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
